generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url = env("MAIN_DATABASE_URL")
}

model User {
    id Int @id @default(autoincrement())
    email String @unique
    username String
    password String
    verified Boolean @default(false)
    oauth Json?
    uuid String @unique @db.Uuid @default(uuid())
    db_username String?
    db_password String?
    db_schema String? @unique
    createdAt DateTime? @default(now())
    updatedAt DateTime? @updatedAt
    containers Container[]
    tokens Token[]
}

model Container {
    id String @unique @db.Uuid @default(uuid())
    user_id Int
    type String
    name String
    status String @default("Stopped")
    tier String
    location String
    config Json?
    createdAt DateTime? @default(now())
    updatedAt DateTime? @updatedAt
    user User @relation(fields: [user_id], references: [id])
}

model Token {
    id Int @id @default(autoincrement())
    user User @relation(fields: [user_id], references: [id])
    user_id Int
    token String @unique @db.Uuid @default(uuid())
    purpose String
    createdAt DateTime? @default(now())
    updatedAt DateTime? @updatedAt
}