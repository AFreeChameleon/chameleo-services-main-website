generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("MAIN_DATABASE_URL")
}

model User {
  id          Int         @id @default(autoincrement())
  email       String      @unique
  username    String
  password    String
  verified    Boolean     @default(false)
  oauth       Json?
  uuid        String      @unique @default(uuid()) @db.Uuid
  db_username String?
  db_password String?
  db_schema   String?     @unique
  createdAt   DateTime?   @default(now())
  updatedAt   DateTime?   @updatedAt
  containers  Container[]
  tokens      Token[]
  invoices    Invoice[]
}

model Container {
  id         String    @unique @default(uuid()) @db.Uuid
  user_id    Int
  product_id Int
  type       String
  name       String
  status     String    @default("Stopped")
  location   String
  config     Json?
  port Int?
  createdAt  DateTime? @default(now())
  updatedAt  DateTime? @updatedAt
  user       User      @relation(fields: [user_id], references: [id])
  product    Product   @relation(fields: [product_id], references: [id])
}

model Token {
  id        Int       @id @default(autoincrement())
  user      User      @relation(fields: [user_id], references: [id])
  user_id   Int
  token     String    @unique @default(uuid()) @db.Uuid
  purpose   String
  createdAt DateTime? @default(now())
  updatedAt DateTime? @updatedAt
}

model Product {
  id         Int         @id @default(autoincrement())
  name       String      @unique
  amount     Float
  invoices   Invoice[]
  containers Container[]
}

model Invoice {
  id         Int       @id @default(autoincrement())
  user       User      @relation(fields: [user_id], references: [id])
  user_id    Int
  product    Product   @relation(fields: [product_id], references: [id])
  product_id Int
  amount     Float
  dueDate    DateTime?
  paidDate   DateTime? @default(now())
}
